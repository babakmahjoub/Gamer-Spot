<%- include("../partials/header") %>


<header class="jumbotron">
		<div class="container">
			<h2 style="font-weight:700">Welcome To Game Blog! </h2>	
			<p style="font-size:18px">Share your gaming interests with other gamers</p>
			<a class="btn btn-large btn-primary" href="/blogs/new">Submit New Blog</a>
		</div>
</header>



<div class="row text-centre">
	<div class="col-lg-8 col-sm-12">
		<div class="row text-center">
			<% blogs.forEach(function(blog){ %>
				<div class="col-md-6 col-sm-12">
				<div class="mb-4 card">
					<img class=" card-img-top" src="<%= blog.image %>" alt="Card image cap" style="height: 20rem; object-fit:cover">
					<div class="card-body">
						<h4 class="card-title"><a href="/blogs/<%= blog._id %>"><%= blog.title %></a></h4>
						<p class="card-text"><%= blog.body.substring(0,100) %>...</p>
						<a href="/blogs/<%= blog._id %>" class="btn btn-primary btn-sm">Read More</a>
					</div>
				</div> 
				</div>
			<% }) %>	
		</div>	
  </div>
  
  
  <!-- Sidebar Widgets Column -->
  <div class="widgetSideIndex col-lg-4">
    <!-- Search Widget -->
    <div class="card my-4">
      <h5 class="card-header">Search</h5>
      <div class="card-body">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search for...">
          <span class="input-group-btn">
            <button class="btn btn-secondary" type="button">Go!</button>
          </span>
        </div>
      </div>
    </div>

    <!-- Categories Widget -->
    <div class="card my-3">
      <h5 class="card-header">Categories</h5>
      <div class="card-body">
        <div class="row">
          <div class="col-lg-6">
            <ul class="list-unstyled mb-0">
              <li>
                <a href="#">PS4</a>
              </li>
              <li>
                <a href="#">XBOX</a>
              </li>
              <li>
                <a href="#">STEAM</a>
              </li>
            </ul>
          </div>
          <div class="col-lg-6">
            <ul class="list-unstyled mb-0">
              <li>
                <a href="#">Online Games</a>
              </li>
              <li>
                <a href="#">Cheats</a>
              </li>
              <li>
                <a href="#">Consoles</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Side Widget -->
    <div class="card my-4">
      <h5 class="card-header">maelezo</h5>
      <div class="card-body">
        You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
      </div>
    </div>
<!-- Side Widget -->
    <div class="card my-4">
      <h5 class="card-header">Next Blog</h5>
      <div class="card-body">
        <img class="card-img-top" src="https://images.unsplash.com/photo-1548484352-ea579e5233a8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="Card image cap">
      </div>
    </div>
  
  
  </div> 


</div>
<nav class="mb-4" aria-label="Page navigation">
  <% if (pages && pages > 0) { %>
  <ul class="pagination justify-content-center">
      <% if (current == 1) { %>
      <li class="page-item disabled"><a class="page-link">First</a></li>
      <% } else { %>
      <li><a class="page-link" href="/blogs">First</a></li>
      <% } %>

      <% if (current == 1) { %>
      <li class="page-item disabled"><a class="page-link">«</a></li>
      <% } else { %>
      <li><a class="page-link" href="/blogs?page=<%= Number(current) - 1 %>">«</a></li>
      <% } %>

      <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
      <% if (i !== 1) { %>
      <li class="page-item disabled"><a class="page-link">...</a></li>
      <% } %>
      <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
      <% if (i == current) { %>
      <li class="active"><a class="page-link"><%= i %></a></li>
      <% } else { %>
      <li><a class="page-link" href="/blogs?page=<%= i %>"><%= i %></a></li>
      <% } %>
      <% if (i == Number(current) + 4 && i < pages) { %>
      <li class="page-item disabled"><a class="page-link">...</a></li>
      <% } %>
      <% } %>

      <% if (current == pages) { %>
      <li class="page-item disabled"><a class="page-link">»</a></li>
      <% } else { %>
      <li><a class="page-link" href="/blogs?page=<%= Number(current) + 1 %>">»</a></li>
      <% } %>

      <% if (current == pages) { %>
      <li class="page-item disabled"><a class="page-link">Last</a></li>
      <% } else { %>
      <li><a class="page-link" href="/blogs?page=<%= pages %>">Last</a></li>
      <% } %>
  </ul>
  <% } %>
</nav>







<%- include("../partials/footer")%>

