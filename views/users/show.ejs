<%- include("../partials/header") %>

<div class="row">
    <div class="col-md-8 row">
        <h1><%= user.firstName + " " + user.lastName %> </h1>
        <div class="thumbnail">
            <div class="col-md-4">
                <img class="card-img-top" src="<%= user.avatar %>" alt="user profie image">
                <div class="caption"><a href="mailto:<%= user.username %>"><%= user.username %></a></div>
            </div>
        </div>
        <div class="col-md-8">Lorem ipsum dolor sit amet consectetur adipisicing elit.
            Illo at aliquid corrupti minima eaque sint nihil optio similique in dolorum exercitationem voluptatem eius, neque ea quos quisquam ex!
            Eum, maxime?
        </div>
        <hr>
        <% if (currentUser.id == user._id) { %>
            <div class="container">
            <a class="btn btn-warning" href="/users/<%=currentUser.id%>/edit">Edit Profile</a>
        </div>
        <% } %>

    </div>
    <div class="col-md-4 row">
        <div class="container">
            <h3>List of blogs by this user:</h3>
            <hr>
            <ul>
            <% blogs.forEach(function(blog){ %>
            <li><a href="/blogs/<%= blog.id %> "><%= blog.title %></a></li>
            <% }) %> 
            </ul>
        </div>
    </div>

</div>

<%- include("../partials/footer") %> 